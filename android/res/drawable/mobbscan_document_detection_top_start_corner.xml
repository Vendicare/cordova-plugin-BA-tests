<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/top_start_corner_top"
        android:left="@dimen/mobbscan_border_corner_stroke_width_adjustment"
        android:right="@dimen/mobbscan_border_corner_stroke_width_adjustment"
        android:bottom="@dimen/mobbscan_border_corner_stroke_width_adjustment">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/mobbscan_border_corner_stroke_width"
                android:color="@color/mobbscan_document_not_detected" />
        </shape>
    </item>
    <item
        android:id="@+id/top_start_corner_start"
        android:top="@dimen/mobbscan_border_corner_stroke_width_adjustment"
        android:right="@dimen/mobbscan_border_corner_stroke_width_adjustment"
        android:bottom="@dimen/mobbscan_border_corner_stroke_width_adjustment">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/mobbscan_border_corner_stroke_width"
                android:color="@color/mobbscan_document_not_detected" />
        </shape>
    </item>
</layer-list>
